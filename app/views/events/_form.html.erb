
<%= form_for @event do |f| %>
	<% if @event.errors.any? %>
		<div class="alert alert-danger">
			<h3>These errors prohibited the form from being created:</h3>
			<ul>
				<% @event.errors.full_messages.each do |msg| %>
				<li><%= msg%></li>
				<% end %>
			</ul>			
		</div>	
	<% end %>
	
	<div class="form-row">
		<div class="form-group col-md-6">
				<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %>		
		</div>

		
		<div class="form-group col-md-6">
				<%= f.label :avatar %>
		<%= f.file_field :avatar, class: "form-control-file" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :description %>
	<%= f.text_area :description, class: "form-control" %> 		
	</div>


	<div class="form-group" >
		<%= f.label :venue_id %>
	<%= f.collection_select :venue_id, Venue.all, :id, :name, prompt: "Select venue" ,class: "form-control" %>		
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<%= f.label "Starting at" %>
		<%= f.text_field :start_datetime, id: "startDatetime",class: "form-control" %> 
		</div>

		<div class="form-group col-md-6">
			<%= f.label "Ending at" %>
		<%= f.text_field :end_datetime, id: "endDatetime",class: "form-control" %> 
		</div>
	</div>	

	<div class="form-row">
		<div class="form-group col-md-6">
			<%= f.label :entry_fee %>
		<%= f.number_field :entry_fee,class: "form-control" %> 
		</div>

		<div class="form-group col-md-6">
			<%= f.label :status %>
		<%= f.select :status, ["New", "On-going", "Over"],class: "form-control" %> 	
		</div>
	</div>	

	<div class="form-check form-check-inline">
		<%= f.collection_check_boxes :category_ids, Category.all, :id, :name,class: "form-check-input" %> 
	</div>
	
	
	<div class="form-group">
		<%= f.label "Tickets" %>
		<%= f.select :tickets_left, value: [250,500,750,1000],class: "form-control" %>
	</div>

	<%= f.submit "Submit", class: "btn btn-success" %>
</div>
<% end %>
