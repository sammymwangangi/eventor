
<div class="container">
<div class="page-header">
	<h3>Add a new Venue</h3>
</div>


<div class="col-md-4">
<%= form_for @venue, html: {class: "form-horizontal"} do |f| %>

	<% if @venue.errors.any? %>
		<div class="alert alert-danger">
			<h3>These errors prohibited the form from being created:</h3>
			<ul>
				<% @venue.errors.full_messages.each do |msg| %>
				<li><%= msg%></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
		<%= f.label :name %>
	<%= f.text_field :name,class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :price %>
	<%= f.number_field :price,class: "form-control" %>
	</div>

	<div class="form-group">
	<%= f.label :avatar %>
	<%= f.file_field :avatar,class: "form-control" %>
	</div>

	<div class="form-group">
	<%= f.label :address %>
	<%= f.text_area :address,class: "form-control" %>
	</div>

	<div class="form-group">
	<%= f.label :locality_id %>
	<%= f.collection_select :locality_id, Locality.all, :id, :name, prompt: "Select your locality" %>
	</div>

	<div class="form-group">
	<%= f.label "Seats(if any)" %>
	<%= f.number_field :seats,class: "form-control" %>
	</div>

	<%= f.submit "Add Venue", class: "btn btn-success" %>

<% end %>
</div>
</div>
